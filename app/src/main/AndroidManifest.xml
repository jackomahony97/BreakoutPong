<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cs3305.breakoutpong">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BreakoutPong"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SelectModeActivity" android:theme="@style/AppTheme.NoActionBar"></activity> //removes bar at top of screen
        <activity android:name=".BluetoothActivity" android:theme="@style/AppTheme.NoActionBar"></activity> //removes bar at top of screen
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>